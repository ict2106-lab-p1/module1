@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 text-center">
        <section>
            <form id="account" method="post">
                <h1 class="font-semibold text-5xl mt-16">Login</h1>
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating">
                    <div class="flex justify-evenly mt-24">
                        <input asp-for="Input.Email" class="form-control block w-4/12 h-12 px-4 py-1 text-base font-semibold bg-slate-600/10 bg-clip-padding border border-solid border-slate-600/10
                              rounded-lg transition  ease-in-out m-0 focus:bg-slate-600/10 focus:border-slate-600 focus:outline-none" placeholder="Email" autocomplete="username" aria-required="true"/>
                    </div>
                    <span asp-validation-for="Input.Email" class="text-sm text-red-500"></span>
                </div>
                
                <div class="form-floating">
                    <div class="flex justify-evenly mt-8">
                        <input asp-for="Input.Password" class="block w-4/12 h-12 px-4 py-1 text-base font-semibold bg-slate-600/10 bg-clip-padding border border-solid border-slate-600/10
                            rounded-lg transition ease-in-out m-0 focus:bg-slate-600/10 focus:border-slate-600 focus:outline-none" placeholder="Password" autocomplete="current-password" aria-required="true"/>
                    </div>
                    <span asp-validation-for="Input.Password" class="text-sm text-red-500"></span>
                </div>
                
                <div class="flex justify-center mt-4">
                    <div class="block w-4/12">
                        <div class="flex justify-between whitespace-nowrap">
                            <label asp-for="Input.RememberMe" class="form-label font-semibold">
                                    <input class="form-check-input rounded" asp-for="Input.RememberMe"/>
                                    @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                                    Remember Me?
                                </label>
                            <p class="font-semibold">
                                <a id="forgot-password" asp-controller="Login" asp-action="ForgotPassword">Forgot Password</a>
                            </p>
                        </div>
                        </div>
                </div>
                <div class = "mt-16">
                    <button id="login-submit" type="submit" class="w-4/12 h8 text-base text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium  rounded-md text-sm px-5 py-2.5 text-center">Login</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}