@using LivingLab.Web.Models.ViewModels.Device
@model LivingLab.Web.Models.ViewModels.Device.ViewDeviceViewModel
@* <remarks> *@
@*  Author: Team P1-3 *@
@*  </remarks> *@
@{
    ViewData["Title"] = "Manage Device";
}

<link rel="Stylesheet" href="~/css/viewDevice.css" type="text/css" xmlns="http://www.w3.org/1999/html"/>

<div class="grid grid-cols-2 mb-2">
    <div>
        <h3 class="text-lg"> NYP-SR7C </h3>
        <h1 class="text-2xl"> Manage Devices</h1>
    </div>
    <div class="justify-self-end">
        <button id="addDeviceBtn" class="btn btn-primary font-bold rounded">
            Add new device
        </button>
    </div>
</div>
<hr class="mb-4"/>
<table id="table_id" class="display">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Serial Num</th>
        <th>Last Updated</th>
        <th>Status</th>
        <th>Threshold</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var device in Model.DeviceList)
    {
        <tr>
            <td>@device.Id</td>
            <td>@device.Name</td>
            <td>@device.Description</td>
            <td>@device.SerialNo</td>
            <td>@device.LastUpdated.ToString("dd/MM/yyyy")</td>
            <td>@device.Status</td>
            <td>@device.Threshold</td>
            <td data-id="@device.Id" class="editDeviceBtn"></td>
            <td data-id="@device.Id" class="deleteDeviceBtn"></td>
        </tr>
    }
    </tbody>
</table>

@* Edit Device Modal *@
<div class="bg-black bg-opacity-50 absolute inset-0 justify-center items-center hidden" id="editOverlay">
    <div class="bg-white max-w-lg py-4 px-4 rounded shadow-xl text-gray-800 mx-auto my-32">
        <div class="flex justify-between items-center">
            <h4 class="text-lg font-bold">Edit Device</h4>
            <svg class="h-8 w-8 cursor-pointer p-1 hover:bg-gray-300 rounded-full closeEditModal" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                      clip-rule="evenodd">
                </path>
            </svg>
        </div>
        <div>
            <p class="text-md-start">NYP-SR7C </p>
        </div>
        <div class="mt-4">
            <form class="w-full max-w-lg" method="post" enctype="multipart/form-data" asp-controller="Device" asp-action="EditDevice">
                @{
                    @await Html.PartialAsync("_DeviceDetails", new DeviceViewModel());
                }
                <div class="mt-3 flex justify-end space-x-3">
                    @* <button class="bg-transparent hover:bg-purple-500 text-purple-700 font-semibold hover:text-white py-2 px-4 border border-purple-500 hover:border-transparent rounded closeEditModal"> *@
                    @*     Cancel *@
                    @* </button> *@
                    <button class="btn btn-primary" type="submit">
                        Save changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@* Add Device Modal *@
<div class="bg-black bg-opacity-50 absolute inset-0 justify-center items-center hidden" id="addOverlay">
    <div class="bg-white max-w-lg py-4 px-4 rounded shadow-xl text-gray-800 mx-auto my-32">
        <div class="flex justify-between items-center">
            <h4 class="text-lg font-bold">Add Device</h4>
            <svg class="h-8 w-8 cursor-pointer p-1 hover:bg-gray-300 rounded-full closeAddModal" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                      clip-rule="evenodd">
                </path>
            </svg>
        </div>
        <div>
                @*To pull LabId *@
            <p class="text-md-start">NYP-SR7C </p>
        </div>
        <div class="mt-4">
            <form class="w-full max-w-lg" method="post" enctype="multipart/form-data" asp-controller="Device" asp-action="AddDevice">
                @{
                    @await Html.PartialAsync("_AddDevice", new DeviceViewModel());
                }
            </form>
        </div>
    </div>
</div>

@* Delete Device Modal *@
<div class="bg-black bg-opacity-50 absolute inset-0 justify-center items-center hidden" id="deleteOverlay">
    <div class="bg-white max-w-lg py-4 px-4 rounded shadow-xl text-gray-800 mx-auto my-32">
        <div class="flex justify-between items-center">
            <h4 class="text-lg font-bold">Delete Device</h4>
            <svg class="h-8 w-8 cursor-pointer p-1 hover:bg-gray-300 rounded-full closeDeleteModal" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                      d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                      clip-rule="evenodd">
                </path>
            </svg>
        </div>
        <div class="mt-4">
            <form class="w-full max-w-lg" method="post" enctype="multipart/form-data" asp-controller="Device" asp-action="DeleteDevice">
                @{
                    @await Html.PartialAsync("_DeleteDevice", new DeviceViewModel());
                }
                <div class="mt-3 flex justify-end space-x-3">
                    @* <button class="bg-transparent hover:bg-purple-500 text-purple-700 font-semibold hover:text-white py-2 px-4 border border-purple-500 hover:border-transparent rounded closeAddModal"> *@
                    @*     Cancel *@
                    @* </button> *@
                    <button class="btn btn-error" id="delBtn" type="submit">
                        Delete device
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/viewDevice.js"></script>
}