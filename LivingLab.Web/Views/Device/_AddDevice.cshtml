@model LivingLab.Web.Models.ViewModels.Device.AddDeviceViewModel

@{
    ViewData["Title"] = "Add Device";
}

<div class="flex flex-wrap -mx-3 mb-6">
    <input type="hidden" id="add-labId" name="Lab.LabId"/>
    <input type="hidden" id="add-labLocation" name="Lab.LabLocation"/>
    <div class="w-full md:w-1/2 px-3md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="add-device-id">
            Device ID
        </label>
        <input class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" style="pointer-events:none;" id="add-device-id" name="Id" type="text" placeholder="0" required>
    </div>
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-serialnum">
            Serial Number
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-serialnum" name="Device.SerialNo" type="text" placeholder="S1001" required>
    </div>
</div>

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-name">
            Name
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-name" name="Device.Name" type="text" placeholder="Name" required>
    </div>
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="addDeviceType">
            Device Type
        </label>
        <div class="relative">
            <select class="block appearance-none w-full bg-white text-gray-900 border border-gray-200 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="addDeviceType" name="Device.Type" required>
            </select>
        </div>
    </div>
</div>

<div class="hidden flex flex-wrap -mx-3 mb-6" id="newDeviceType">
    <div class="w-full px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-new-type">
            New Device Type
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-new-type" name="NewType" type="text" placeholder="New Device Type">
    </div>
</div>

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-desc">
            Description
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-desc" name="Device.Description" type="text" placeholder="Description">
    </div>
</div>

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-status">
            Status
        </label>
        <div class="relative">
            <select class="block appearance-none w-full bg-white text-gray-900 border border-gray-200  py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-status" name="Device.Status">
                <option value="Available">Available</option>
                <option value="Unavailable">Unavailable</option>
                <option value="Booked">Booked</option>
                <option value="In Maintenance">In Maintenance</option>
            </select>
        </div>
    </div>
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-threshold">
            Threshold
        </label>
        <div class="flex items-center">
            <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="grid-threshold" name="Threshold" type="number" min="0" step="any" value="0">
            <p class="w-3 h-4 fill-current text-gray-500 -ml-16 z-10" fill-current="">kWh</p>
        </div>
    </div>
</div>