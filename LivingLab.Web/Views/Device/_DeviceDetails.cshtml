@model LivingLab.Web.Models.ViewModels.Device.DeviceViewModel

@{
    ViewData["Title"] = "Device Details";
}

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-device-id">
            Device ID
        </label>
        <input class="appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" style="pointer-events:none;" id="edit-device-id" name="Id" type="text" placeholder="0">
    </div>
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-serialnum">
            Serial Number
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-serialnum" name="SerialNo" type="text" placeholder="A12345678E">
    </div>
</div>

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-name">
            Name
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-name" name="Name" type="text" placeholder="A12345678E">
    </div>
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-device-type">
            Device Type
        </label>
        <div class="relative">
            <select class="block appearance-none w-full bg-white text-gray-900 border border-gray-200 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-device-type" name="Type">
                <option value="Surveillance Camera">Surveillance Camera</option>
                <option value="Temperature Sensor">Temperature Sensor</option>
                <option value="Humidity Sensor">Humidity Sensor</option>
                <option value="Light Sensor">Light Sensor</option>
                <option value="VR Light Controls">VR Light Controls</option>
            </select>
        </div>
    </div>
</div>

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-desc">
            Description
        </label>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-desc" name="Description" type="text" placeholder="Description">
    </div>
</div>

<div class="flex flex-wrap -mx-3 mb-6">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-status">
            Status
        </label>
        <div class="relative">
            <select class="block appearance-none w-full bg-white text-gray-900 border border-gray-200  py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-status" name="Status">
                <option value="Available">Available</option>
                <option value="Unavailable">Unavailable</option>
                <option value="Booked">Booked</option>
                <option value="In Maintenance">In Maintenance</option>
            </select>
        </div>
    </div>
    <div class="w-full md:w-1/2 px-3">
        <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="edit-threshold">
            Threshold
        </label>
        <div class="flex items-center">
            <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="edit-threshold" name="Threshold" type="number" min="0" step="any" placeholder="0 means unlimited">
            <p class="w-3 h-4 fill-current text-gray-500 -ml-16 z-10" fill-current="">kWh</p>
        </div>
    </div>
</div>

<input type="hidden" id="labId" name="Lab.LabId"/>
<input type="hidden" id="editLabLocation" name="Lab.LabLocation"/>