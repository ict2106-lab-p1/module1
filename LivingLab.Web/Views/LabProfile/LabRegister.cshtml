@model LivingLab.Web.Models.ViewModels.LabProfile.LabProfileViewModel
@* /// <remarks> *@
@* /// Author: Team P1-5 *@
@{
    ViewData["Title"] = "Lab Register";
}

<div class="row">
    <div class="col-md-4">
        <form id="registerLab" method="post" asp-controller="LabProfile" asp-action="LabRegister">
            <div class="bg-white shadow p-12  mb-12  rounded-lg">

                <div>
                    <h2 class="text-2xl font-bold">
                        Register Labs
                    </h2>
                    <p class="text-base mt-3 font-medium text-lg">Enter basic information </p>
                </div>
                <div class="mt-6">
                    <p>
                        <label asp-for="LabLocation" class="font-semibold">Lab Location</label>
                    </p> <input asp-for="LabLocation" type="text" placeholder="Enter Lab Location" class="input input-bordered w-full max-w-xs">
                </div>
                <div class="mt-6">
                    <p>
                        <label asp-for="LabStatus" class="font-semibold">Lab Status</label>
                    </p>
                    <select class="select select-bordered w-full max-w-xs" name="faculty" asp-for="LabStatus">
                        <option disabled selected>Select Lab Status</option>
                        <option value="Available">Available</option>
                        <option value="Semi-Occupied">Semi-Occupied</option>
                        <option value="Occupied">Occupied</option>
                    </select>
                </div>
                <div class="mt-6">
                    <p>
                        <label asp-for="LabInCharge" class="font-semibold">Lab In-Charge</label>
                    </p> <input asp-for="LabInCharge" type="text" placeholder="Enter Lab In-Charge" class="input input-bordered w-full max-w-xs">
                </div>
                <div class="mt-6">
                    <p>
                        <label asp-for="Capacity" class="font-semibold">Lab Capacity</label>
                    </p> <input asp-for="Capacity" type="text" placeholder="Enter Lab Capacity" class="input input-bordered w-full max-w-xs">
                </div>
                <div class="mt-6">
                    <p>
                        <label asp-for="Area" class="font-semibold">Area</label>
                    </p> <input asp-for="Area" type="text" placeholder="Enter Area" class="input input-bordered w-full max-w-xs">
                </div>
                <div class="mt-6">
                    <p>
                        <label asp-for="EnergyUsageBenchmark" class="font-semibold">Energy Usage Benchmark</label>
                    </p> <input asp-for="EnergyUsageBenchmark" type="text" placeholder="Enter Energy Usage" class="input input-bordered w-full max-w-xs">
                </div>
                <div class="mt-4 mb-4">
                    <p>
                        <span asp-validation-for="LabLocation" class="text-sm text-red-500"></span>
                    </p>
                    <p>
                        <span asp-validation-for="LabStatus" class="text-sm text-red-500"></span>
                    </p>
                    <p>
                        <span asp-validation-for="LabInCharge" class="text-sm text-red-500"></span>
                    </p>
                    <p>
                        <span asp-validation-for="Capacity" class="text-sm text-red-500"></span>
                    </p>
                    <p>
                        <span asp-validation-for="Area" class="text-sm text-red-500"></span>
                    </p>
                    <p>
                        <span asp-validation-for="EnergyUsageBenchmark" class="text-sm text-red-500"></span>
                    </p>

                    <p>
                    </p>
                </div>
            </div>
       
                <div class="flex justify-center">
                            <button id="labsubmit" type="submit" class="btn btn-primary w-6/12">Create Lab</button>
                        </div>
        </form>
    </div>
    
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}