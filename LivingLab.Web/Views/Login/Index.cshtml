@model LivingLab.Web.Models.ViewModels.Login.LoginViewModel
@* /// <remarks> *@
@* /// Author: Team P1-5 *@
@* /// </remarks> *@
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="col-md-4 text-center">
        <section>
            <form id="account" method="post" asp-controller="Login" asp-action="Index">
                <h1 class="font-semibold text-5xl mt-12">Login</h1>
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating">
                    <div class="flex justify-evenly mt-16">
                        <input asp-for="Email" class="form-control block w-4/12 h-12 px-4 py-1 text-base font-semibold bg-slate-600/10 bg-clip-padding border border-solid border-slate-600/10
                              rounded-lg transition  ease-in-out m-0 focus:bg-slate-600/10 focus:border-slate-600 focus:outline-none" placeholder="Email" autocomplete="username" aria-required="true"/>
                    </div>
                    <span asp-validation-for="Email" class="text-sm text-red-500"></span>
                </div>
                
                <div class="form-floating">
                    <div class="flex justify-evenly mt-8">
                        <input asp-for="Password" class="block w-4/12 h-12 px-4 py-1 text-base font-semibold bg-slate-600/10 bg-clip-padding border border-solid border-slate-600/10
                            rounded-lg transition ease-in-out m-0 focus:bg-slate-600/10 focus:border-slate-600 focus:outline-none" placeholder="Password" autocomplete="current-password" aria-required="true"/>
                    </div>
                    <span asp-validation-for="Password" class="text-sm text-red-500"></span>
                </div>
                
                <div class="flex justify-center mt-4">
                    <div class="block w-4/12">
                        <div class="flex justify-center whitespace-nowrap">
                            @*<label asp-for="RememberMe" class="form-label font-semibold">
                                    <input class="form-check-input rounded" asp-for="RememberMe"/>
                                    $1$ @Html.DisplayNameFor(m => m.Input.RememberMe) #1#
                                    Remember Me?
                                </label>*@
                            <p class="font-semibold">
                                <a id="forgot-password" asp-controller="Login" asp-action="ForgotPassword">Forgot Password</a>
                            </p>
                        </div>
                        </div>
                </div>
                <div class = "mt-12">
                    <button id="login-submit" type="submit" class="w-4/12 btn btn-primary">Login</button>
                </div>
                
                <div class="flex justify-center mt-4">
                    <div class="block w-4/12">
                        <div class="flex justify-center whitespace-nowrap">
                            @*<label asp-for="RememberMe" class="form-label font-semibold">
                                    <input class="form-check-input rounded" asp-for="RememberMe"/>
                                    $1$ @Html.DisplayNameFor(m => m.Input.RememberMe) #1#
                                    Remember Me?
                                </label>*@
                            <u class="">
                                <a id="Register" asp-controller="Account" asp-action="Register">Create a new account</a>
                            </u>
                        </div>
                        </div>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
