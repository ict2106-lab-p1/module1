@model LivingLab.Web.Models.ViewModels.Login.RegisterViewModel
@* /// <remarks> *@
@* /// Author: Team P1-5 *@
@* /// </remarks> *@
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.FirstName"></label>
                <input asp-for="@Model.FirstName" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.LastName"></label>
                <input asp-for="@Model.LastName" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.UserName"></label>
                <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true"/>
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" autocomplete="phone" aria-required="true"/>
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.StudentFaculty"></label>
                <input asp-for="@Model.StudentFaculty" class="form-control" autocomplete="phone" aria-required="true"/>
                                <span asp-validation-for="@Model.StudentFaculty" class="text-danger"></span>
                @* <select name="faculty" asp-for="Input.Faculty"> *@
                @*     <option value="SE">SE</option> *@
                @*     <option value="ICT">ICT</option> *@
                @*     <option value="MDME">MDME</option> *@
                @*     <option value="CSC">CSC</option> *@
                @* </select> *@
            </div>
            <div class="form-floating mt-4 mb-4">
                <span style="white-space: pre-line">
                <label asp-for="@Model.IsSMS"></label>
                <input asp-for="@Model.IsSMS" type="checkbox" value="SMS"/>SMS
                <input asp-for="@Model.IsGoogleAuth" type="checkbox" value="GoogleAuth"/> Google Authentication
                </span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}