@model LivingLab.Web.Models.ViewModels.Login.VerifyViewModel
@* /// <remarks> *@
@* /// Author: Team P1-5 *@
@* /// </remarks> *@
@{
    ViewData["Title"] = "Verify Login";
}

<div class="row">
    <div class="col-md-4 text-center">
        <section>
            <form method="post" asp-controller="Login" asp-action="VerifyCodeEmail">
                <h1 class="font-semibold text-5xl mt-16">Login with Email</h1>
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating">
                    <div class="flex justify-evenly mt-24">
                        <input asp-for="OTP" class="form-control block w-4/12 h-12 px-4 py-1 text-base font-semibold bg-slate-600/10 bg-clip-padding border border-solid border-slate-600/10
                              rounded-lg transition  ease-in-out m-0 focus:bg-slate-600/10 focus:border-slate-600 focus:outline-none" placeholder="Verification OTP" autocomplete="false" aria-required="true"/>
                    </div>
                    <span class="text-sm text-red-500"></span>
                </div>

                @Html.ValidationMessageFor(m => m.OTP)
                <div class="mt-16">
                    @* <button id="verify-submit" type="submit" class="w-4/12 h8 text-base text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium  rounded-md text-sm px-5 py-2.5 text-center">Verify</button> *@
                    <button id="verify-submit" type="submit" class="w-4/12 btn btn-primary">
                        Verify Code
                    </button>
                </div>
            </form>
            <form method="post" asp-controller="Login" asp-action="NewCodeEmail">
                <div class="mt-4">
                    <button type="submit" class="w-4/12 btn btn-outline">
                        Re-send Code to Email
                    </button>
                </div>
            </form>

            <div class="mt-4">
                <u>
                    <a asp-controller="Login" asp-action="ContactAdmin">Forgot my email</a>
                </u>
            </div>
        </section>
    </div>
</div>
