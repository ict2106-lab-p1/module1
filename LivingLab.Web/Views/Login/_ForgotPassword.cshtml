@model LivingLab.Web.Models.ViewModels.Account.ForgotPasswordViewModel
@* /// <remarks> *@
@* /// Author: Team P1-5 *@
@* /// </remarks> *@
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="row">
    <div class="col-md-4 text-center">
        <section>
            <form method="post" asp-controller="Login" asp-action="ForgotPassword">
                <h1 class="font-semibold text-5xl mt-16">Forgot Password</h1>
                @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                <div class="form-floating">
                    <div class="flex justify-evenly mt-24">
                        <input asp-for="Email" class="form-control block w-4/12 h-12 px-4 py-1 text-base font-semibold bg-slate-600/10 bg-clip-padding border border-solid border-slate-600/10
                              rounded-lg transition  ease-in-out m-0 focus:bg-slate-600/10 focus:border-slate-600 focus:outline-none" placeholder="Recovery Email Address" autocomplete="email" aria-required="true"/>
                    </div>
                    <span class="text-sm text-red-500"></span>
                </div>

                @Html.ValidationMessageFor(m => m.Email)
                <div class="mt-16">
                    @* <button id="verify-submit" type="submit" class="w-4/12 h8 text-base text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium  rounded-md text-sm px-5 py-2.5 text-center">Verify</button> *@
                    <button id="verify-submit" type="submit" class="w-4/12 h8 text-base text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-gray-300 font-medium  rounded-md text-sm px-5 py-2.5 text-center">
                        Send Recovery Link
                    </button>
                </div>
            </form>
        </section>
    </div>
</div>