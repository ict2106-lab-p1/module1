<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <link rel="icon" href="favicon.ico"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Living Lab</title>
    <link
        href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,700,300italic,400italic,700italic&display=swap"
        rel="stylesheet"
        type="text/css"/>
    @* Replace the cdn with your style scripts *@
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>
</head>
<body>
<div>
    <div class="leading-normal tracking-normal" id="main-body">
        <div class="flex flex-wrap">
            @* sidebar *@
            <div
                class="w-1/2 md:w-1/3 lg:w-64 fixed md:top-0 md:left-0 h-screen lg:block bg-gray-100 border-r z-30"
                id="main-nav">
                <div
                    class="w-full h-20 flex px-4 pr-6 mt-24 lg:mt-8 items-center justify-center mb-8">
                    <a href="#">
                        @* logo here *@
                        <img
                            class="font-semibold text-3xl text-blue-400 pl-4 h-24"
                            @* src="" *@
                            alt="logo"/>
                    </a>
                </div>

                <div class="mb-4 px-4 space-y-1">
                    <p class="pl-4 text-sm font-semibold mb-1 uppercase">Test</p>
                    <a
                        class="w-full flex items-center text-sunset-400 h-10 pl-4 hover:bg-gray-200 rounded-lg cursor-pointer"
                        href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span class="text-gray-700">Index</span>
                    </a>

                    <a
                        class="w-full flex items-center text-sunset-400 h-10 pl-4 bg-gray-200 hover:bg-gray-200 rounded-lg cursor-pointer"
                        href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
                        </svg>
                        <span class="text-gray-700">Visited</span>
                    </a>
                </div>
            </div>
            @* end sidebar *@

            <div
                class="w-full bg-gray-100 pl-0 lg:pl-64 min-h-screen"
                id="main-content">
                @* navbar start *@
                <div class="sticky top-0 z-100">
                    <div
                        class="w-full h-20 px-6 bg-gray-100 border-b flex items-center justify-between">

                        <!-- right navbar -->
                        <div class="flex items-center relative">
                            <button
                                class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded shadow">
                                Logout
                            </button>
                        </div>
                    </div>
                </div>
                @* navbar end *@

                <div class="p-6 bg-gray-100 mb-20 h-auto">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>