 @using LivingLab.Web.Models.ViewModels.UserManagement 
 @model LivingLab.Web.Models.ViewModels.UserManagement.ViewUserManagementViewModel
@{
    ViewData["Title"] = "Manage Users";
}
<div class="">
    <div class="flex p-12 justify-around">
        <div>
            <h2 class="text-2xl font-bold">
                Manage Users
            </h2>
            <p class="text-base mt-3 font-medium text-lg">View All accounts </p>
        </div>
        <div class="flex gap-1 ">
            <button class="btn  rounded-full text-white hover:text-gray-600 hover:bg-gray-900">Add Lab</button>
            <button class="btn  rounded-full text-white hover:text-gray-600 hover:bg-gray-900">Add Technician</button>
        </div>
    </div>
    <div class="flex flex-col justify-center items-center ">
         <div class="bg-white shadow p-12  mb-12  rounded-lg">
                <h2 class="font-semibold text-xl p-4">Lab Technician Accounts</h2>
                <div class="flex">
                    <!-- This example requires Tailwind CSS v2.0+ -->
                    <div class="flex flex-col">
                        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                                <div class=" overflow-hidden border-b border-gray-200 sm:rounded-lg">
                                    <table class="min-w-full divide-y divide-gray-200">
                                        <thead class="bg-gray-50">
                                        <tr class="justify-evenly">
                                            <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                            <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                            <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Faculty</th>
                                            <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lab Access</th>
                                            <th scope="col" class="relative px-12 py-3"><span class="sr-only">Edit</span></th>
                                            <th scope="col" class="relative px-12 py-3"><span class="sr-only">Delete</span></th>
                                        </tr>
                                        </thead>
                                        <tbody class="bg-white divide-y divide-gray-200">
                                        <tr class="hover:bg-blue-100">
                                            @foreach (var user in Model.userList) {
                                                <tr>
                                                    <td class="px-12 py-4 text-sm text-gray-900">@user.FirstName</td>
                                                    <td class="px-12 py-4 text-sm text-gray-900">@user.Email</td>
                                                    <td class="px-12 py-4 text-sm text-gray-900">@user.UserFaculty</td>
                                                    <td class="px-12 py-4 text-sm text-gray-900">SIT-LAB2A</td>
                                                    <td class="px-12 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                        <label for="edit-modal" class="btn modal-button editUserBtn" data-id="@user.Id">Edit</label>
                                                    </td>
                                                    <td class="px-12 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                       <label for="my-modal" class="btn modal-button deleteUserBtn"   data-id="@user.Id">Delete</label>
                                                    </td>
                                                </tr>
                                            }
                                        <tr/>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
         <div class="bg-white shadow p-12  mb-12  rounded-lg">
                    <h2 class="font-semibold text-xl p-4">Lab Users Accounts</h2>
                    <div class="flex flex flex-col justify-center items-center">
                        <!-- This example requires Tailwind CSS v2.0+ -->
                        <div class="flex flex-col">
                            <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                                <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                                    <div class="overflow-hidden border-b border-gray-200 sm:rounded-lg">
                                        <table class="min-w-full divide-y divide-gray-200">
                                            <thead class="bg-gray-50">
                                            <tr class="justify-evenly">
                                                <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                                <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                                <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Faculty</th>
                                                <th scope="col" class="px-12 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Lab Access</th>
                                                <th scope="col" class="relative px-12 py-3">
                                                    <span class="sr-only">Edit</span>
                                                </th>
                                                <th scope="col" class="relative px-12 py-3">
                                                    <span class="sr-only">Delete</span>
                                                </th>
                                            </tr>
                                            </thead>
                                            <tbody class="bg-white divide-y divide-gray-200">
                                            <tr class="hover:bg-blue-100">
                                            @foreach (var user in Model.userList)
                                            {
                                                <tr>
                                                    <td class="px-12 py-4 text-sm text-gray-900">@user.FirstName</td>
                                                    <td class="px-12 py-4 text-sm text-gray-900">@user.Email</td>
                                                    <td class="px-12 py-4 text-sm text-gray-900">@user.UserFaculty</td>
                                                    <td class="px-12 py-4 text-sm text-gray-900">SIT-LAB2A</td>
                                                    <td class="px-12 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                        <label for="edit-modal" class="btn modal-button editUserBtn" data-id="@user.Id">Edit</label>
                                                    </td>
                                                    <td class="px-12 py-4 whitespace-nowrap text-right text-sm font-medium">
                                                       <label for="my-modal" class="btn modal-button deleteUserBtn"   data-id="@user.Id">Delete</label>
                                                    </td>
                                                </tr>
                                            }
                                            <tr/>
                                            </tbody>
                                        </table>
                                                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </div>
</div>
<input type="checkbox" id="my-modal" class="modal-toggle">
 <div class="modal">
     <div class="modal-box">
         <div class="mt-4">
             <form class="w-full max-w-lg" method="post" enctype="multipart/form-data" asp-controller="UserManagement" asp-action="DeleteAccount">
                 @{
                     @await Html.PartialAsync("_DeleteUser", new UserManagementViewModel())

                 }
                 <div class="mt-3 flex justify-end space-x-3">
                     <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded disabled" id="delBtn" type="submit">
                         Edit
                     </button>
                 </div>
             </form>
         </div>
     </div>
 </div>
 
 <input type="checkbox" id="edit-modal" class="modal-toggle">
 <div class="modal">
   <div class="modal-box">
       <div class="mt-4">
           <form class="w-full max-w-lg" method="post" enctype="multipart/form-data" asp-controller="UserManagement" asp-action="EditUser">
               @{
                   @await Html.PartialAsync("_UserDetails", new UserManagementViewModel())
 
               }
               <div class="mt-3 flex justify-end space-x-3">
                   <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded disabled" id="editbtn" type="submit">
                       Edit
                   </button>
               </div>
           </form>
       </div>
   </div>
 </div>


 @section Scripts
 {
     <script src="~/js/viewAccounts.js"></script>
 }