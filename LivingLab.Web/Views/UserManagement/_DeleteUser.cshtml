@model LivingLab.Web.Models.ViewModels.UserManagement.UserManagementViewModel
@* /// <remarks> *@
@* /// Author: Team P1-5 *@
@{
    ViewData["Title"] = "Delete User";
}
<div>
    <div>
        <h3 class="text-lg font-bold text-center m-4">Are you sure you want to delete this user?</h3>
        <div class="text-lg font-bold text-center flex flex-wrap -mx-3 mb-6">
            <div class="w-full md:w-1/2 px-3">
                <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="del-user-id">
                    ID
                </label>
                <input class="appearance-none block w-full bg-gray-100 font-bold text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 text-center" style="pointer-events:none;" id="del-user-id" name="Id" type="text" placeholder="0">
            </div>
            <div class="w-full md:w-1/2 px-3">
                <label class="tracking-wide text-gray-700 text-xs font-bold mb-2" for="del-user-email">
                    Email
                </label>
                <input class="appearance-none block w-full bg-gray-100 font-bold text-gray-700 border border-gray-300 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500 text-center" style="pointer-events:none;" id="del-user-email" name="Name" type="text" placeholder="A12345678E">
            </div>
        </div>
    </div>
    <div>
        <h3 class="tracking-wide text-gray-700 text-xs font-bold mb-2 text-center m-4">
            This action cannot be undone. To confirm, type <text class="text-blue-400 font-bold" id="userEmail"></text> below.
        </h3>
        <input class="appearance-none block w-full bg-white text-gray-900 border border-gray-200 rounded py-3 px-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="del-cfm" type="text" placeholder="Email" autofocus>
    </div>
</div>

